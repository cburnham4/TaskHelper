<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_category"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_marginBottom="@dimen/margin_between_items"
    card_view:cardCornerRadius="0dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="@dimen/cardview_vertical_padding"
            android:paddingBottom="@dimen/cardview_vertical_padding"
            android:contentDescription="Category Icon"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cardview_text_padding_left"
            android:paddingStart="@dimen/cardview_text_padding_left"
            android:id="@+id/tv_category_name"
            android:layout_centerVertical="true"
            android:textSize="@dimen/cardview_text_size"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>